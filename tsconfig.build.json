// Specialized tsconfig to only compile .ts-files in the src dir
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
		"moduleResolution": "node16"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
}
