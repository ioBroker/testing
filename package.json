{
  "name": "@iobroker/testing",
  "version": "1.2.5",
  "description": "Shared utilities for adapter and module testing in ioBroker",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "prewatch": "rimraf ./build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "lint:ts": "eslint --ext .ts src",
    "lint:wotan": "wotan",
    "lint": "npm run lint:ts && npm run lint:wotan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/testing.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "iobroker",
    "component-tests",
    "testing"
  ],
  "author": "AlCalzone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlCalzone/testing/issues"
  },
  "homepage": "https://github.com/AlCalzone/testing#readme",
  "devDependencies": {
    "@fimbul/mithotyn": "^0.21.0",
    "@fimbul/wotan": "^0.21.0",
    "@iobroker/adapter-core": "^1.0.3",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "4.1.4",
    "@types/fs-extra": "^7.0.0",
    "@types/iobroker": "^1.4.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^12.0.0",
    "@types/sinon": "^7.0.5",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "alcalzone-shared": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.1.1",
    "fs-extra": "^8.0.0",
    "mocha": "^6.1.4",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0"
  }
}
