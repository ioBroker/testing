{
  "name": "@iobroker/testing",
  "version": "4.1.0",
  "description": "Shared utilities for adapter and module testing in ioBroker",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "test": "mocha src/**/*.test.ts",
    "test:watch": "mocha src/**/*.test.ts --watch",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "prewatch": "rimraf ./build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "check": "npm run build -- --noEmit",
    "lint:ts": "eslint --ext .ts src",
    "lint": "npm run lint:ts",
    "release": "release-script"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/testing.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "iobroker",
    "component-tests",
    "testing"
  ],
  "author": "AlCalzone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlCalzone/testing/issues"
  },
  "homepage": "https://github.com/AlCalzone/testing#readme",
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@iobroker/adapter-core": "^2.6.6",
    "@tsconfig/node14": "^1.0.3",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/iobroker": "^4.0.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.23",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4"
  },
  "dependencies": {
    "alcalzone-shared": "~4.0.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "mocha": "^10.0.0",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0"
  }
}
