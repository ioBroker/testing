{
  "name": "@iobroker/testing",
  "version": "2.3.0",
  "description": "Shared utilities for adapter and module testing in ioBroker",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "prewatch": "rimraf ./build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "check": "npm run build -- --noEmit",
    "lint:ts": "eslint --ext .ts src",
    "lint": "npm run lint:ts",
    "release": "release-script"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/testing.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "iobroker",
    "component-tests",
    "testing"
  ],
  "author": "AlCalzone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlCalzone/testing/issues"
  },
  "homepage": "https://github.com/AlCalzone/testing#readme",
  "devDependencies": {
    "@alcalzone/release-script": "^1.6.0",
    "@iobroker/adapter-core": "^2.0.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "4.1.5",
    "@types/fs-extra": "^9.0.1",
    "@types/iobroker": "^3.0.12",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.6",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "alcalzone-shared": "~3.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.1.1",
    "fs-extra": "^9.0.0",
    "mocha": "^8.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.3.0"
  }
}
