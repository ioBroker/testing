{
  "name": "@iobroker/testing",
  "version": "2.4.4",
  "description": "Shared utilities for adapter and module testing in ioBroker",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "test": "mocha src/**/*.test.ts",
    "test:watch": "mocha src/**/*.test.ts --watch",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "prewatch": "rimraf ./build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "check": "npm run build -- --noEmit",
    "lint:ts": "eslint --ext .ts src",
    "lint": "npm run lint:ts",
    "release": "release-script"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/testing.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "iobroker",
    "component-tests",
    "testing"
  ],
  "author": "AlCalzone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlCalzone/testing/issues"
  },
  "homepage": "https://github.com/AlCalzone/testing#readme",
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@iobroker/adapter-core": "^2.4.0",
    "@types/chai": "^4.2.17",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "4.1.5",
    "@types/fs-extra": "^9.0.12",
    "@types/iobroker": "^3.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "alcalzone-shared": "~4.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.3.2",
    "fs-extra": "^9.0.1",
    "mocha": "^9.1.1",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.7.0"
  }
}
